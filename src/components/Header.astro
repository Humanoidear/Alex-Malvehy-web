---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="head">
	<img style="top:50%; left:30px; transform:translate(0, -50%); position:relative; "src="img/am_isotype.png" height="35px">
	<div class="links">
		<a href="">
			<i class="fa-brands fa-behance"></i>
		</a>
		<a href="">
			<i class="fa-brands fa-instagram"></i>
		</a>
		<a href="">
			<i class="fa-brands fa-youtube"></i>
		</a>
		<a href="">
			<i class="fa-brands fa-twitter"></i>
		</a>
	</div>
</div>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	i{
		color:#ffffff;
		font-size: 30px;
	}
	.links{
		right:30px;
		top:50%;
		display: flex;
		gap:20px;
		transform: translate(0, -50%);
		position: absolute;
	}
	.head{
		width:90%;
		height:80px;
		top:25px;
		left:50%;
		transform: translate(-50%, 0);
		background-color: #000000;
		box-shadow: 0px 0px 30px #000000;
		border-radius: 50px;
		position: relative;
	}
</style>
